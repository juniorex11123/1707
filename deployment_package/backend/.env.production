# Production Environment Configuration for home.pl hosting

# Database Configuration
# Replace with your MongoDB connection string from home.pl
MONGO_URL="mongodb://localhost:27017"
DB_NAME="timetracker_production"

# JWT Configuration
# Generate a secure secret key for production
JWT_SECRET="your-super-secure-production-jwt-secret-key-2025-change-this"

# Application Configuration
ENVIRONMENT="production"
HOST="0.0.0.0"
PORT=8001

# CORS Configuration
# Replace with your actual domain
CORS_ORIGINS=["https://yourdomain.home.pl", "https://www.yourdomain.home.pl"]

# Logging Configuration
LOG_LEVEL="info"